{{- define "cooking_available_foods" -}}
<div id="foods-list">
{{ if and (len .foods | eq 0) (len .search | ne 0) }}
	Not found
{{ end }}
{{ range .foods }}
	<a
		style="display: flex;"
  	up-emit='food:select'
  	up-emit-props='{"id":{{.ID}},"name":"{{.Name}}"}'
	>
		<div
			style="
				height: 2rem;
				width: 2rem;
			"
		>
			{{ if .Image.URI | len }}
				<img
					style="max-width: 100%; aspect-ratio: 1/1;"
					src="/content/{{.Image.URI}}"
				/>
			{{ end }}
		</div>
		<div>
			{{ .Name }}
		</div>
	</a>
{{end}}
</div>
{{end}}